<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_horizontal">

    <TextView
        android:text="Update Contact"
        android:textSize="25sp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Theme.AppCompat"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/updateImageViewId"
        android:src="@drawable/add_photo_btn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#10e6d7"
        app:civ_fill_color="#62a388" />

    <EditText
        android:id="@+id/updateNameEditTextId"
        android:textSize="20sp"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/updateNumberEditTextId"
        android:textSize="20sp"
        android:hint="Number"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/updateContactBtnId"
        android:textSize="20sp"
        android:text="Update Contact"
        android:textAllCaps="false"
        android:background="@drawable/round_btn"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/cancelBtnId"
        android:textSize="20sp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:background="@drawable/round_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
