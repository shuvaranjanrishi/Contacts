<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_horizontal"
    tools:context=".AddContactActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewId"
        android:src="@drawable/add_photo_btn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="10dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#10e6d7"
        app:civ_fill_color="#62a388"/>

    <EditText
        android:id="@+id/nameEditTextId"
        android:textSize="20sp"
        android:hint="Name"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/numberEditTextId"
        android:textSize="20sp"
        android:hint="Number"
        android:layout_marginBottom="10dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/saveContactBtnId"
        android:textSize="20sp"
        android:text="save"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        android:onClick="saveContactBtnAction"
        android:background="@drawable/round_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>